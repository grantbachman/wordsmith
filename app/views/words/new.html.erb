<%= render 'shared/error_messages', object: @word %>
<%= form_for @word, html: { class: "form-inline" } do |f| %>
	<%#= render 'shared/error_messages', object: f.object %>
	<%= f.text_field :name, placeholder: "Add a word" %>	
	<%= f.submit "Add", class: "btn btn-primary" %>
<% end %>

<% @words.each do |word| %>
	<%= word.name %><br />
<% end %>
