<div id="results">
	<h1>Results for Quiz #<%= @quiz.id %></h1>
	<!--Auth Hash: <%= @quiz.auth_hash %> -->
	<ol>
		<% @questions.each do |question| %>
			<li><div class="definition">Some text Some text Some textome textome textome textome textome textome textome textome textome textome textome textome textome text<%#= question.word.definition %></div>

					<% if question.correct %>
						<span class="right_symbol">✔</span><%= question.word.name %>
					<% else %>
						<span class="wrong_symbol">✘</span><%= question.response %><span class="right_answer">Correct Answer: <%= question.word.name %></span>
					<% end %>

			</li>
		<% end %>
	</ol>
</div>