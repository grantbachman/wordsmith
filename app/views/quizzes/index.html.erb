<%= link_to "New Quiz", new_quiz_path, class: 'btn btn-success' %>

<div id="quiz_calendar" class="centerDiv">
	<div id="calendar_nav">
		<span class="last">
			<%= link_to "Last Month", '#', id: 'last_month' %>
		</span>
		<span class="title"></span>
		<span class="next">
			<%= link_to "Next Month", '#', id: 'next_month' %>
		</span>
	</div>	
<h3></h3>
	<table id='calendar'>
		<tr>
			<% day = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'] %>
			<% day.count.times do |index| %>
				<th><%= day[index] %></th> 
			<% end %>
		</tr>
	</table>	
</div>
