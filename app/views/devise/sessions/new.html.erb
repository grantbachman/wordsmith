<div id="mainForm">
	<h2 class="center">Log in</h2><br />
	
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.email_field :email, placeholder: "Email", class: "input-medium" %></div>

	  <div><%= f.password_field :password, placeholder: "Password", class: "input-medium" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %><span id="rememberMe">Remember me?</span></div>
	  <% end %>

	  <div><%= f.submit "Log in", class: "btn btn-primary" %></div>
	<% end %>
	Not registered? <%= link_to "Sign up now!", new_user_registration_path %>
</div>