<div class="registerLogin centerDiv centerHeading">
	<h1>Log in</h1>
	
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  
		<% unless flash.blank? %>
			<div class="alert alert-error">
				<ul>
					<% flash.each do |key, value| %>
						<li><%= value %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

	  <div><%= f.email_field :email, placeholder: "Email", class: "input-medium" %></div>

	  <div><%= f.password_field :password, placeholder: "Password", class: "input-medium" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div id="rememberMe"><%= f.check_box :remember_me, checked: true %><span>Remember me?</span></div>
	  <% end %>

	  <div><%= f.submit "Log in", class: "btn btn-primary" %></div>
	<% end %>
	<div class="alreadyRegistered">Not registered? <%= link_to "Sign up now!", new_user_registration_path %></div>
</div>